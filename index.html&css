<script>
  // ‚îÄ‚îÄ YEAR ‚îÄ‚îÄ
  document.getElementById('year').textContent = new Date().getFullYear();

  // ‚îÄ‚îÄ HAMBURGER ‚îÄ‚îÄ
  const hamburger = document.getElementById('hamburger');
  const mobileMenu = document.getElementById('mobileMenu');

  hamburger.addEventListener('click', () => {
    hamburger.classList.toggle('open');
    mobileMenu.classList.toggle('open');
  });

  document.querySelectorAll('.mobile-link').forEach(link => {
    link.addEventListener('click', () => {
      hamburger.classList.remove('open');
      mobileMenu.classList.remove('open');
    });
  });

  // ‚îÄ‚îÄ SCROLL FADE IN ‚îÄ‚îÄ
  const fadeEls = document.querySelectorAll('.fade-in');
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
        // Animate skill bars when visible
        const fills = entry.target.querySelectorAll('.skill-fill');
        fills.forEach(fill => {
          fill.style.width = fill.dataset.pct + '%';
        });
      }
    });
  }, { threshold: 0.12, rootMargin: '0px 0px -40px 0px' });

  fadeEls.forEach(el => observer.observe(el));

  // Skill bars in skill categories
  const skillObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const fills = entry.target.querySelectorAll('.skill-fill');
        fills.forEach(fill => {
          setTimeout(() => { fill.style.width = fill.dataset.pct + '%'; }, 200);
        });
      }
    });
  }, { threshold: 0.3 });

  document.querySelectorAll('.skill-category').forEach(el => skillObserver.observe(el));

  // ‚îÄ‚îÄ NAV ACTIVE STATE ‚îÄ‚îÄ
  const sections = document.querySelectorAll('section, [id]');
  const navLinks = document.querySelectorAll('.nav-links a');

  window.addEventListener('scroll', () => {
    let current = '';
    sections.forEach(section => {
      const sectionTop = section.offsetTop - 80;
      if (window.scrollY >= sectionTop) {
        current = section.getAttribute('id');
      }
    });
    navLinks.forEach(link => {
      link.style.color = '';
      if (link.getAttribute('href') === '#' + current) {
        link.style.color = 'var(--gold)';
      }
    });
  });

  // ‚îÄ‚îÄ FORM SUBMIT ‚îÄ‚îÄ
  function handleFormSubmit(e) {
    e.preventDefault();
    const btn = document.getElementById('submitBtn');
    btn.textContent = 'Message Sent ‚úì';
    btn.style.background = 'var(--bg3)';
    btn.style.color = 'var(--gold)';
    btn.style.border = '1px solid var(--gold)';
    setTimeout(() => {
      btn.textContent = 'Send Message ‚Üí';
      btn.style.background = '';
      btn.style.color = '';
      btn.style.border = '';
      e.target.reset();
    }, 3000);
  }

  // ‚îÄ‚îÄ SMOOTH PARALLAX ON HERO ‚îÄ‚îÄ
  window.addEventListener('scroll', () => {
    const y = window.scrollY;
    const heroBg = document.querySelector('.hero-bg');
    if (heroBg && y < window.innerHeight) {
      heroBg.style.transform = `translateY(${y * 0.3}px)`;
    }
  });
</script>
</body>
</html>
